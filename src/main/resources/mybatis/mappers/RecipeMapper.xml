<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recipe.gola.mapper.RecipeMapper">

	<!-- 레시피 전체리스트 출력 -->
	<select id="list" resultType="RecipeDTO" parameterType="RecipeDTO">
		SELECT 
			r.no
			, r.kind
			, r.menu
			, rl.menuImg
		FROM recipe r
        LEFT JOIN recipe_link rl
		ON r.no = rl.no
		where 1=1 
        <if test='search != "" and search != null '>
			AND r.menu like CONCAT('%',#{search},'%')
		    OR r.kind like CONCAT(#{search})
        </if>   	        
        ORDER BY no DESC
	</select>
	
	<!-- 각 레시피 상세페이지 출력 -->
	<select id="detail" resultType="RecipeDTO" parameterType="int">
		SELECT *
		FROM recipe
		WHERE no=${no};
	</select>
	
</mapper>