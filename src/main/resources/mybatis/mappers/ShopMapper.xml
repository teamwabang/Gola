<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recipe.gola.mapper.ShopMapper">

	<!-- 쇼핑몰 전체 상품 리스트 출력 -->
	<select id="shopalllist" resultType="ProductDTO" parameterType="ProductDTO">
	<![CDATA[
		SELECT 
			prod.pNo
			, prod.pName
			, prod.pPrice
			, prod.pImage
		FROM product prod
		WHERE pName NOT LIKE '[골라특가]%'
        ORDER BY RAND()
        LIMIT 4;
    ]]>
	</select>
	
	<!-- 쇼핑몰 특가 상품 리스트 출력 -->
	<select id="shopdiscountlist" resultType="ProductDTO" parameterType="ProductDTO">
	<![CDATA[
		SELECT 
			prod.pNo
			, prod.pName
			, prod.pPrice
			, prod.pImage
		FROM product prod
		WHERE pName LIKE '[골라특가]%'      
        ORDER BY RAND()
        LIMIT 4;
    ]]>
	</select>
	
	<!-- 쇼핑몰 재료 리스트 상세페이지 출력 -->
	<select id="shopdetail" resultType="ProductDTO" parameterType="int">
	<![CDATA[
		SELECT *
		FROM product
		WHERE pno=${pno};
	]]>
	</select>
	
	
</mapper>